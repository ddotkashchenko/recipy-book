pipeline {
    agent {
        kubernetes {
            yaml '''
                apiVersion: v1
                kind: Pod
                securityContext:
                    fsGroup: 1000
                metadata:
                    name: kube-agent
                    labels:
                        name: kubeagent
                spec:
                    containers:
                        - name: dotnet
                          image: mcr.microsoft.com/dotnet/sdk:7.0
                          tty: true
                          workingDir: 
                        - name: docker
                          image: docker:latest
                          command:
                            - cat
                          tty: true
                          volumeMounts:
                          - mountPath: /var/run/docker.sock
                            name: docker-sock
                    volumes:
                        - name: docker-sock
                          hostPath:
                            path: //var/run/docker.sock
                            type: Socket
            '''
        }
    }
    stages {
        stage('Build') {
            steps {
                container('dotnet') {
                    sh 'dotnet build -c Release'
                }
            }
        }
        stage('Test') {
            steps {
                container('dotnet') {
                    sh 'ls -a'
                    //sh 'dotnet test'
                }
            }
        }
        stage('Deploy') {
            steps {
                container('docker') {
                    sh 'ls -a'
                    sh 'docker build -t recipybook/client:latest -f Dockerfile.ci .'
                }
            }
        }
    }
}